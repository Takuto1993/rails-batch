<h1>Books</h1>

<% @books.each do |book| %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <tr>
      <td><span><%= book.title %></span></td>
      <td><span><%= book.body %></span></td>
      <td><span><%= link_to "Show", book_path(book.id) %></span></td>
      <td><a class="edit" href="/books/edit">Edit</a></td>
      <td><a data-confirm="Are you sure?" class="have destroy_58719" rel="nofollow" data-method="delete" href="/books/58719">Destroy</a></td>
    </tr>
  </tbody>
</table>

<% end %>
